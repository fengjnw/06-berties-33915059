<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Users in <%=shopData.shopName%>
    </title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>
    <h1>
        <%=shopData.shopName%> Shop
    </h1>
    <h2>Here are the users:</h2>
    <!-- List of available users -->
    <ul>
        <% users.forEach(user=> { %>
            <li>
                <%= user.username %> - <%= user.first_name %> <%= user.last_name %>, Email: <%= user.email %> <a href="/users/delete/<%= user.id %>">Delete</a>
            </li>
            <% }); %>
    </ul>
    <a href="/">Back</a>
</body>

</html>